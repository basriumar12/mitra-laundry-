<?xml version="1.0" encoding="utf-8"?>
        

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5" android:tag="layout/activity_register_mitra_0">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/auth_bg"
            tools:context=".Activity.Login">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="350dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_logo_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Info Mitra Laundry"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/cetName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/white"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:drawablePadding="@dimen/_15sdp"
                        android:hint="Nama Mitra Laundry"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textColor="@color/white"

                        android:textColorHint="@color/light_gray" />

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:background="@null"
                            android:layout_toStartOf="@id/cari_alamat"
                            android:id="@+id/cetAlamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/white"
                            android:drawablePadding="@dimen/_15sdp"
                            android:hint="Alamat"
                            android:inputType="text"
                           android:maxLines="4"
                            android:textColor="@color/white"
                            android:layout_marginRight="4dp"
                            android:textColorHint="@color/light_gray" />

                        <TextView
                            android:layout_alignParentRight="true"
                            android:background="@drawable/bg_primary_color"
                            android:id="@+id/cari_alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/white"
                            android:drawablePadding="@dimen/_15sdp"
                            android:hint="Cari Alamat"
                            android:inputType="number"
                            android:maxLength="14"
                            android:gravity="center"
                            android:padding="8dp"

                            android:layout_margin="3dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/light_gray" />




                    </RelativeLayout>

                    <View
                        android:layout_marginTop="3dp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>



                </LinearLayout>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/cvRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:padding="12dp"
                    app:fb_defaultColor="@color/white"
                    app:fb_focusColor="@color/white"
                    app:fb_iconPosition="left"
                    app:fb_radius="30dp"
                    app:fb_text="Daftar"
                    app:fb_textColor="@color/colorPrimary" />



            </LinearLayout>

            <RelativeLayout
                android:id="@+id/RRsncbar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </ScrollView>
         