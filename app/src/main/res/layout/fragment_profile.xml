<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.samyotech.laundrymitra.ui.fragment.ProfileFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/header_title"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivBanner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/cover"
                        app:layout_collapseMode="parallax" />


                    <ImageView
                        android:id="@+id/updateBackground"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="32dp"
                        android:src="@drawable/icon_blue_camera" />

                </RelativeLayout>
                ​

                <LinearLayout
                    android:id="@+id/body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header_title"
                    android:layout_marginTop="-16dp"
                    android:background="@drawable/round_background"
                    android:orientation="vertical"
                    android:paddingTop="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvName"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:paddingLeft="16dp"
                            android:singleLine="true"
                            android:text="Dariyanto"
                            android:textColor="@color/colorPrimary" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                app:cardCornerRadius="@dimen/_6sdp"
                                app:cardElevation="@dimen/_6sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_8sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Pendapatan Secara Keseluruhan" />


                                    <TextView

                                        android:id="@+id/tv_pendapatan"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_14sdp"
                                        android:text="Rp 0"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                app:cardCornerRadius="@dimen/_6sdp"
                                app:cardElevation="@dimen/_6sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_8sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Pendapatan Setelah Dipotong 30%" />

                                    <TextView
                                        android:id="@+id/tv_pendapatan_potongan"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_14sdp"
                                        android:text="Rp. 0"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_tarik_pendapatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp"
                            android:background="@color/colorPrimary"
                            android:text="Tarik Pendapatan"
                            android:textColor="@color/white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ctvpromosi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackground"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="16dp"
                                    android:src="@drawable/ic_promosi" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Promosi Toko"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="18dp"
                                    android:src="@drawable/icon_next" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ctvulasan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackground"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="16dp"
                                    android:src="@drawable/ic_ulasan" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Ulasan"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="18dp"
                                    android:src="@drawable/icon_next" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ctvChat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackground"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="16dp"
                                    android:src="@drawable/ic_komplan" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Komplain"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="18dp"
                                    android:src="@drawable/icon_next" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ctvpusatEdukasi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackground"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="16dp"
                                    android:src="@drawable/ic_pusat_edukasi" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Pusat Edukasi Mitra/Agen"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="18dp"
                                    android:src="@drawable/icon_next" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ctPengaturan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackground"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="16dp"
                                    android:src="@drawable/ic_pengaturan" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Pengaturan"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="18dp"
                                    android:src="@drawable/icon_next" />
                            </LinearLayout>


                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ctvChangePassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackground"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="16dp"
                                    android:src="@drawable/icon_lock" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Ganti Password"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="18dp"
                                    android:src="@drawable/icon_next" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ctvnotification"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackground"
                                android:gravity="center_vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="16dp"
                                    android:src="@drawable/icon_notification" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Komplain"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="18dp"
                                    android:src="@drawable/icon_next" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ctvSupport"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackground"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="16dp"
                                    android:src="@drawable/icon_headset" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Dunia Laundry Care"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="18dp"
                                    android:src="@drawable/icon_next" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ctvAbout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackground"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="16dp"
                                    android:src="@drawable/icon_info" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Tentang Aplikasi"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="18dp"
                                    android:src="@drawable/icon_next" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ctvLogout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackground"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="16dp"
                                    android:src="@drawable/icon_logout" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="@string/logout"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="18dp"
                                    android:src="@drawable/icon_next" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    ​
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/relayimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="140dp"
                    app:layout_anchorGravity="top|center_horizontal"
                    app:layout_scrollFlags="scroll">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivAvtaimg"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/profile"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="4dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/updatePhoto"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="bottom|right"
                        android:layout_margin="18dp"
                        android:src="@drawable/icon_blue_camera" />

                </FrameLayout>
            </RelativeLayout>

        </ScrollView>
    </LinearLayout>

</layout>