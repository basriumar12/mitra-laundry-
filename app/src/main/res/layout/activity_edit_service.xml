<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


                    <FrameLayout
                        android:id="@+id/collapsing"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:orientation="vertical"
                        app:layout_scrollFlags="scroll|snap">


                        <ImageView
                            android:id="@+id/ivBanner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/shop_image"
                            app:layout_collapseMode="parallax" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/blue_gradient"
                            app:layout_collapseMode="parallax" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/back"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:padding="16dp"
                                android:src="@drawable/icon_prev"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/ivShopName"
                                style="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginRight="48dp"
                                android:layout_centerInParent="true"
                                android:text="Support"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/add"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:padding="16dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_baseline_add_24"
                                app:tint="@color/white" />


                        </RelativeLayout>

                    </FrameLayout>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_background"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deskripsi"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/des"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:hint="Isi deksripsi" />

                        <TextView
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Nama Layanan"
                            android:textStyle="bold" />

                        <EditText
                            android:visibility="gone"
                            android:id="@+id/serviceName"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="halo" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:text="Daftar Produk"
                            android:textStyle="bold" />


                        <androidx.recyclerview.widget.RecyclerView

                            android:id="@+id/rvServiceItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:id="@+id/tv_data_produk_koosong"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:text="Daftar Produk Kosong"
                            />

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:id="@+id/btnSave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:padding="12dp"
                            app:fb_defaultColor="@color/colorPrimary"
                            app:fb_focusColor="@color/colorPrimary"
                            app:fb_iconPosition="left"
                            app:fb_radius="30dp"
                            app:fb_text="Simpan"
                            app:fb_textColor="@color/white" />


                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>





        </RelativeLayout>

    </ScrollView>


</layout>